<h3>以下の内容で、送信する。</h3>

<%= form_for(@contact) do |f| %>

    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :content %>

    <p>名前：<%= @contact.name %></p>
    <p>メールアドレス：<%= @contact.email %></p>
    <p>問い合わせ内容：<%= @contact.content %></p>

    <br>

    <%= f.submit "送信する" %>
<% end %>

<%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :content %>
    <br>

    <%= f.submit "もどる", name: 'back' %>
<% end %>